VIRTUAL_ENV_DISABLE_PROMPT=yes

TORTUGA_ROOT=<%= @instroot -%>

if [ -z "$TORTUGA_ROOT" ]; then
    echo "Error: Tortuga has not been properly installed. Please reinstall."
else
    . $TORTUGA_ROOT/bin/activate

    export TORTUGA_ROOT

    export MANPATH=$TORTUGA_ROOT/man:$MANPATH
fi

alias get-node-list="get-node-status -l"
